<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="0dp"
    app:cardElevation="0dp"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardBackgroundColor="?android:attr/colorForegroundInverse"
    app:strokeColor="@color/colorGreyStroke"
    app:strokeWidth="1dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <RelativeLayout
            android:id="@+id/attendance_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round">

            <TextView
                android:id="@+id/attd_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/sans_medium"
                android:textSize="22sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/attd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/attendance_thumbnail"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/sans"
            android:textSize="16sp"
            android:singleLine="false"
            android:ellipsize="none" />





        <TextView
            android:id="@+id/attd_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/attendance_thumbnail"
            android:layout_below="@id/attd_name"
            android:fontFamily="@font/sans_bold"
            android:paddingTop="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>