<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:clickable="false"
    android:focusable="false"
    android:elevation="0dp"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardBackgroundColor="?android:attr/colorBackground"
    app:strokeColor="@color/colorGreyStroke"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorForegroundInverse">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/notice_header"
                >
                <TextView
                    android:id="@+id/datestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="@font/sans_medium"
                    android:textColor="@color/noticeDateText"
                    android:textSize="14sp"
                    android:layout_margin="8dp"
                    />



                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_below="@id/datestamp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_bold"
                    android:textColor="@color/noticeHeaderText"
                    android:textSize="17sp"
                    android:layout_margin="8dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title"
                    android:background="@color/colorGrey2" />
            </RelativeLayout>

        <TextView
            android:id="@+id/contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:autoLink="web"
            android:fontFamily="@font/sans"
            android:textColor="@color/noticeTextColor"
            android:textSize="16sp"
            android:layout_margin="8dp"/>

    </RelativeLayout>






    </com.google.android.material.card.MaterialCardView>


